#Website: https://www.db-fiddle.com/f/cP3ht6xyEC2waswNoRUoyF/11

CREATE TABLE teams (
  id INTEGER PRIMARY KEY,
  name TEXT,
  hometown TEXT,
  primary_color TEXT,
  secondary_color TEXT
);

CREATE TABLE players (
  id INTEGER PRIMARY KEY,
  first_name TEXT,
  last_name TEXT,
  age INTEGER,
  team_id INTEGER,
 FOREIGN KEY(team_id) REFERENCES teams(id)
);

